          <%= link_to 'Editar', edit_admin_path(admin) %>
        <%end%>
        <% if can? :destroy, @admin %>
        <%= link_to 'Eliminar', admin, method: :delete, data: { confirm: 'Â¿EstÃ¡s seguro?' } %>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

