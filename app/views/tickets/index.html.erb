

<%= link_to 'Descargar en Excel', 'export/tickets' %>

<table class ="table table-bordered">
  <thead>
    <tr>
      <th>Folio</th>
      <th>Rut</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Patente</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.id, ticket %></td>
        <td><%= ticket.rut %></td>
        <td><%= ticket.first_name %></td>
        <td><%= ticket.last_name %></td>
        <td><%= ticket.vehicle_plate %></td>
        <td><%= ticket.date.in_time_zone("Santiago").to_date %></td>
        <td><%= ticket.date.in_time_zone("Santiago").strftime("%I:%M%p") %></td>
        <td>
        <% if can? :read, ticket %>  
          <%= link_to 'Mostrar', ticket %>
        <%end%>
        <% if can? :update, ticket %>
          <%= link_to 'Editar', edit_ticket_path(ticket) %>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>




